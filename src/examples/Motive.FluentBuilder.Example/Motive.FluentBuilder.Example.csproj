<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>$(IntermediateOutputPath)Generated</CompilerGeneratedFilesOutputPath>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Motiv.Generator.Attributes\Motiv.Generator.Attributes.csproj" />
        <ProjectReference Include="..\..\Motiv.Generator\Motiv.Generator.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false" />

        <None Include="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Generated\Motiv.Generator\" />
    </ItemGroup>
</Project>
